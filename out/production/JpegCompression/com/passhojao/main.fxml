<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" fillWidth="true" spacing="15" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.passhojao.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Button disable="true" text="Jpeg Image Compression">
    </Button>
    <TextField fx:id="imagePath" editable="false" onMouseClicked="#onImagePathClick" promptText="Choose Image">
    </TextField>
    <TextField fx:id="fileSize" editable="true" promptText="Size in KB">
    </TextField>
    <Button fx:id="compressButton" onMouseClicked="#onCompressClick" style="-fx-background-color: rgb(77,102,204);" text="COMPRESS!" textFill="#ffffffe3">
    </Button>
    <TextField fx:id="done" alignment="CENTER" editable="false" visible="false" />
    <Hyperlink onMouseClicked="#openFollowMeLink" text="Follow me @hamidInventions" />
</VBox>
